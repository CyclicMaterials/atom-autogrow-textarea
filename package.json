{
  "name": "@cyclic/atom-autogrow-textarea",
  "version": "4.0.0",
  "author": "Frederik Krautwald",
  "description": "Textarea that grows in height as more lines of input are entered",
  "license": "MIT",
  "bugs": "https://github.com/CyclicMaterials/atom-autogrow-textarea/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/CyclicMaterials/atom-autogrow-textarea"
  },
  "keywords": [
    "cyclejs",
    "textarea",
    "input",
    "Material Design"
  ],
  "main": "atom-autogrow-textarea.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "@cycle/core": "^3.1.0",
    "@cycle/dom": "^5.0.1",
    "@cyclic/atom-layout": "^1.0.1",
    "@cyclic/template-demo-pages": "^1.0.0",
    "@cyclic/util-combine-class-names": "^2.0.0",
    "cuid": "^1.3.8"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babelify": "^6.2.0",
    "browserify": "^11.0.1",
    "cli-release": "^1.0.3",
    "cssnext": "^1.8.3",
    "eslint": "1.0.0",
    "eslint-config-cycle": "^3.0.0",
    "eslint-plugin-cycle": "^1.0.1",
    "eslint-plugin-no-class": "^0.1.0",
    "faucet": "0.0.1",
    "postcss": "^4.0.0",
    "postcss-cli": "^1.0.0",
    "shelljs": "^0.5.3",
    "tape": "^4.2.0",
    "validate-commit-message": "^3.0.0"
  },
  "scripts": {
    "lint": "eslint *.js",
    "testJs": "npm run lint && babel-node *.test.js | faucet",
    "testCss": "postcss -u cssnext -o tmp.css atom-autogrow-textarea.css && rm -f tmp.css",
    "test": "npm run testCss && npm run lint",
    "css": "postcss -c postcss.config.json",
    "browserify": "browserify demo/main.js -d -t [ babelify ] --outfile demo/bundle.js",
    "build": "npm run css && npm run browserify",
    "deps": "npm install && validate-commit-msg",
    "start": "npm run deps && npm test && npm run build && echo 'Open demo/index.html in your browser'",
    "patch": "release patch",
    "minor": "release minor",
    "major": "release major"
  }
}
